---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "an spaced repetition app leveraging the notes you take on google books",
  image = "/images/logo_face.png",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={image} />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body class="h-[calc(100dvh)]">
    <Header />
    <slot />
  </body>
</html>
